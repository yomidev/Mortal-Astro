---
interface Props {
  characterName: string;
  characterDescription: string;
}

const { characterName, characterDescription } = Astro.props;
---

<div class="absolute left-[120px] top-[80px]">
  <h3
    style="font-size: 8rem;"
    class="text-white font-bold text-left w[220px] leading-[120px]"
  >
    {characterName}
  </h3>
  <p class="mt-3 text-pretty text-white w-[420px] leading-5">
    {characterDescription}
  </p>
</div>
